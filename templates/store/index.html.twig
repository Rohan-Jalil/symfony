{% extends "base.html.twig" %}

{% block stylesheets %}
    <style>
        table {
            table-layout: fixed;
            width: 100%;
        }
        th, td {
            word-break: break-word;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="ui right aligned grid">
        <div class="sixteen wide column">
            <div class="ui segment">
                <a href="{{ path('create_update_store_branch') }}" class="ui secondary button">Add New</a>
            </div>
        </div>
    </div>
    <div class="ui list">
        {% for store in stores %}
        <div class="item">
            <i class="folder icon"></i>
            <div class="content">
                <div class="header"><a href="{{ path('show_store_branch_list', { 'id': store.id }) }}">{{ store.storeName }}</a></div>
                <div class="description">{{ store.branches.count == 0 ? "no branch exists" : ""}}</div>
                <div class="list">
                    {% for branch in store.branches %}
                    <div class="item">
                        <i class="folder icon"></i>
                        <div class="content">
                            <div class="header"><a href="{{ path('show_store_branch', {'store_id': store.id, 'branch_id': branch.id}) }}">{{ branch.name }}</a></div>
                            <div class="description">{{ branch.street ~ ', ' ~ branch.county ~ ' ' ~ branch.state ~ ' ' ~ branch.zipcode }}</div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}

{% endblock %}